<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activities.LandingActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/gameTitle"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/topScores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/title"
        android:layout_marginTop="62dp"
        android:text="@string/recentScoreText"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/scoreText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/topScores"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="37dp"
        android:text="@string/score1"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/scoreText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/scoreText1"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:text="@string/score2"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/scoreText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/scoreText2"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:text="@string/score3"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/scoreText4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:text="@string/score4"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/scoreText5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/scoreText4"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:text="@string/score5"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/scoreText6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/scoreText5"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:text="@string/score6"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/scoreText7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/scoreText6"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:text="@string/score7"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/scoreText8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/scoreText7"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:text="@string/score8"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/scoreText9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/scoreText8"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:text="@string/score9"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/scoreText10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/scoreText9"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:text="@string/score10"
        android:textSize="20sp" />

    <Button
        android:id="@+id/nextFirst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="@string/nextButton"
        android:textSize="30sp" />
</RelativeLayout>
