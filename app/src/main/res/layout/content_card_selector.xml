<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scaleType="centerInside"
    tools:context="com.ajochcas.lostcitiescounter.CardSelector"
    tools:showIn="@layout/app_bar_card_selector">

    <TextView
        android:id="@+id/selectcardtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/desert"
        android:textSize="30sp" />

    <Button
        android:id="@+id/x1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/selectcardtext"
        android:layout_marginTop="48dp"
        android:background="@drawable/bg_button"
        android:clickable="true"
        android:hapticFeedbackEnabled="true"
        android:soundEffectsEnabled="true"
        android:text="$"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/x2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3"
        android:layout_alignTop="@+id/x1"
        android:background="@drawable/bg_button"
        android:clickable="true"
        android:hapticFeedbackEnabled="true"
        android:soundEffectsEnabled="true"
        android:text="$"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/x3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/button3"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignRight="@+id/button3"
        android:layout_alignTop="@+id/x2"
        android:background="@drawable/bg_button"
        android:clickable="true"
        android:hapticFeedbackEnabled="true"
        android:soundEffectsEnabled="true"
        android:text="$"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/x1"
        android:layout_marginTop="40dp"
        android:background="@drawable/bg_button"
        android:clickable="true"
        android:elegantTextHeight="false"
        android:hapticFeedbackEnabled="true"
        android:text="2"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button6"
        android:layout_alignStart="@+id/button6"
        android:layout_alignTop="@+id/button2"
        android:background="@drawable/bg_button"
        android:clickable="true"
        android:hapticFeedbackEnabled="true"
        android:text="3"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/button3"
        android:background="@drawable/bg_button"
        android:clickable="true"
        android:hapticFeedbackEnabled="true"
        android:text="4"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button2"
        android:layout_marginTop="40dp"
        android:background="@drawable/bg_button"
        android:clickable="true"
        android:hapticFeedbackEnabled="true"
        android:text="5"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button9"
        android:layout_alignStart="@+id/button9"
        android:layout_alignTop="@+id/button5"
        android:background="@drawable/bg_button"
        android:clickable="true"
        android:hapticFeedbackEnabled="true"
        android:text="6"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button4"
        android:layout_alignStart="@+id/button4"
        android:layout_alignTop="@+id/button6"
        android:background="@drawable/bg_button"
        android:clickable="true"
        android:hapticFeedbackEnabled="true"
        android:text="7"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/button8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button5"
        android:layout_marginTop="40dp"
        android:background="@drawable/bg_button"
        android:clickable="true"
        android:hapticFeedbackEnabled="true"
        android:text="8"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/button9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button8"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_button"
        android:clickable="true"
        android:hapticFeedbackEnabled="true"
        android:text="9"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/button10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/button9"
        android:background="@drawable/bg_button"
        android:clickable="true"
        android:hapticFeedbackEnabled="true"
        android:text="10"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="60dp"
        android:background="@drawable/bg_button"
        android:clickable="true"
        android:hapticFeedbackEnabled="true"
        android:text="NEXT"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/homeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/nextButton"
        android:background="@drawable/bg_button"
        android:clickable="true"
        android:hapticFeedbackEnabled="true"
        android:text="HOME"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/calculateScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/nextButton"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_button"
        android:text="Get Your Score"
        android:textColor="@color/white" />
</RelativeLayout>
